{
    "extends": "@tsconfig/node14/tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "module": "esnext",
        "declaration": true,
        "declarationDir": "dist/dts",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": [
            "es2020",
            "dom"
        ],
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts",
        "**/tests",
        "**/*.test.ts"
    ]
}